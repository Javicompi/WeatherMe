<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="hourly"
            type="com.example.android.weatherme.data.database.entities.perhour.HourlyEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:currentBackground="@{hourly.icon}"
        tools:background="@color/list_item_current_background_dayclear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_hourly_time"
            android:time="@{hourly.deltaTime}"
            android:offset="@{hourly.offset}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            tools:text="21:00"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/list_hourly_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/avd_arrow_up_down"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/list_hourly_icon"
            app:layout_constraintEnd_toStartOf="@id/list_hourly_arrow"
            app:layout_constraintTop_toTopOf="parent"
            android:currentIcon="@{hourly.icon}"
            tools:src="@drawable/i01d"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_hourly_expanded_area"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_hourly_icon"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourly_guideline"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <ImageView
                android:layout_width="@dimen/hourly_item_icon_size"
                android:layout_height="@dimen/hourly_item_icon_size"
                android:id="@+id/list_hourly_temp_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_thermometer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/list_hourly_temp"
                app:layout_constraintStart_toEndOf="@id/list_hourly_temp_icon"
                app:layout_constraintTop_toTopOf="@id/list_hourly_temp_icon"
                app:layout_constraintBottom_toBottomOf="@id/list_hourly_temp_icon"
                android:text="@{@string/current_temp(hourly.temp)}"
                tools:text="16Â°"/>

            <ImageView
                android:layout_width="@dimen/hourly_item_icon_size"
                android:layout_height="@dimen/hourly_item_icon_size"
                android:id="@+id/list_hourly_cloud_icon"
                app:layout_constraintStart_toEndOf="@id/hourly_guideline"
                app:layout_constraintTop_toTopOf="@id/list_hourly_temp_icon"
                android:src="@drawable/ic_cloud"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_hourly_clouds"
                app:layout_constraintStart_toEndOf="@id/list_hourly_cloud_icon"
                app:layout_constraintTop_toTopOf="@id/list_hourly_cloud_icon"
                android:text="@{@string/current_percent(hourly.clouds)}"
                tools:text="20%"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>